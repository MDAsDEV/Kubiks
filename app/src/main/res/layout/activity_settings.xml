<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_empty_phone"
    tools:context=".settings">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_sound"
        android:theme="@style/SwitchCompatStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="250dp"
        app:showText="true"
        app:switchTextAppearance="@style/SwitchCompatTextStyle"
        app:track="@drawable/switch_track" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_language"
        android:theme="@style/SwitchCompatStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch_sound"
        android:layout_marginTop="30dp"
        app:track="@drawable/switch_track"
        app:switchTextAppearance="@style/SwitchCompatTextStyle"
        app:showText="true"
         />


    <Spinner
        android:id="@+id/spinner_choose_fone"
        android:layout_width="wrap_content"
        android:background="@drawable/check_shape"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/switch_language"
        android:layout_marginTop="30dp"
        android:entries="@array/colors"></Spinner>

    <ImageButton
        android:id="@+id/homeBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/home_button"></ImageButton>

</RelativeLayout>
