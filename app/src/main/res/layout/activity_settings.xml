<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_layout"
    android:background="@drawable/settings_empty_phone"
    tools:context=".settings">


    <TextView
        android:id="@+id/test_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:text="SOUND"
        android:textSize="20dp"></TextView>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/SwitchCompatStyle"
        app:showText="true"
        app:switchTextAppearance="@style/SwitchCompatTextStyle"
        app:track="@drawable/switch_track" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/engl_label"
        ></ImageView>

    <Spinner
        android:id="@+id/spinner_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/check_shape"
        android:entries="@array/languages"
        android:minWidth="150dp"
        android:minHeight="35dp"
        android:spinnerMode="dialog"></Spinner>

    <Spinner
        android:id="@+id/spinner_choose_fone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_language"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:minHeight="35dp"
        android:minWidth="150dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/check_shape"
        android:entries="@array/colors"></Spinner>

    <ImageButton
        android:id="@+id/homeBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/home_button"></ImageButton>

</RelativeLayout>
